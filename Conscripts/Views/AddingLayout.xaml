<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Conscripts.Views.AddingLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Conscripts.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:Conscripts.Converters" 
    xmlns:fontModel="using:Conscripts.Helpers"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:Int2VisibilityConverter x:Key="Int2Vis"/>
        <converters:Enum2ColorConverter x:Key="Enum2Color"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer x:Name="AddingShortcutScrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto">
                <StackPanel Grid.Column="0" Spacing="8" Orientation="Vertical" Margin="20,20,20,8">
                    <Grid HorizontalAlignment="Stretch">
                        <Rectangle RadiusX="4" RadiusY="4" HorizontalAlignment="Stretch" Height="196" Fill="#10888888" StrokeDashArray="3" StrokeThickness="2" Stroke="{ThemeResource ControlElevationBorderBrush}"/>
                        <StackPanel x:Name="NoFileSelectedStackPanel" Spacing="12" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Padding="12,8" Click="OnClickChooseFile">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE838;" FontSize="15" Margin="0,0,6,0" Opacity="0.9"/>
                                    <TextBlock Text="选择文件" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Text="或拖拽文件至此" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7"/>
                        </StackPanel>
                        <StackPanel x:Name="FileSelectedStackPanel" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Image x:Name="Ps1FileIconImage" Source="/Assets/Icons/file_ps1_icon.png" Width="100" Height="70" Stretch="Uniform" Margin="0,0,8,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Image x:Name="BatFileIconImage" Source="/Assets/Icons/file_bat_icon.png" Width="100" Height="70" Stretch="Uniform" Margin="0,0,8,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <HyperlinkButton Margin="0,8,0,0" HorizontalAlignment="Center" Click="OnClickChooseFile">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE838;" FontSize="15" Margin="0,0,6,0" Opacity="0.9"/>
                                    <TextBlock Text="重新选择" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9"/>
                                </StackPanel>
                            </HyperlinkButton>
                            <TextBlock x:Name="CopyTipTextBlock" Text="" Margin="16,8" FontSize="12" Opacity="0.5" TextWrapping="WrapWholeWords" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Grid ColumnSpacing="16" Margin="0,8,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="名称" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <TextBox x:Name="AddingShortcutNameTextBox" Grid.Column="1" PlaceholderText="" FontSize="14" Height="34" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid ColumnSpacing="16" Margin="0,8,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="分类" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <AutoSuggestBox x:Name="AddingShortcutCategoryTextBox" Grid.Column="1" MaxSuggestionListHeight="128" ItemsSource="{x:Bind _viewModel.Categories,Mode=OneWay}" PlaceholderText="未分类" FontSize="14" Height="34" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid ColumnSpacing="16" Margin="0,8,0,8" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="颜色" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <ComboBox x:Name="AddingShortcutColorComboBox" Grid.Column="1" MinWidth="104" Height="34" SelectedIndex="4" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="Firebrick" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="红色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="Tomato" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="橙色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="Goldenrod" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="黄色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="ForestGreen" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="绿色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="DodgerBlue" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="蓝色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="Orchid" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="紫色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="DeepPink" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="粉色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="Sienna" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="棕色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Height="14" Width="14" Fill="DimGray" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="灰色" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                                </Grid>
                            </ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <CheckBox x:Name="AddingShortcutRunasCheckBox" IsChecked="False" Content="以管理员身份运行" HorizontalAlignment="Left" Checked="AddingShortcutRunasCheckBox_Checked" Unchecked="AddingShortcutRunasCheckBox_Unchecked"/>
                    <CheckBox x:Name="AddingShortcutNoWindowCheckBox" IsChecked="False" Content="无窗口运行" HorizontalAlignment="Left"/>
                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="8" Background="#10888888" Margin="10,20,20,20">
                <GridView x:Name="AddingShortcutIconGridView" Grid.Row="2" Padding="20,0,8,20" SelectionMode="Single" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemsSource="{x:Bind _viewModel.AllIcons,Mode=OneWay}" SelectedIndex="0">
                    <GridView.Header>
                        <TextBlock Text="图标" FontWeight="Bold" FontSize="14" Margin="8,20,8,20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </GridView.Header>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="fontModel:Character">
                            <Grid Width="48" Height="48">
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{x:Bind Char}" FontSize="16"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}" BorderThickness="0,1,0,0" Padding="20,10" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Padding="24,10" Click="OnClickReset">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE72C;" FontSize="15" Margin="0,0,6,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="重置" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Padding="24,10" Click="OnClickCreate" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE109;" FontSize="15" Margin="0,0,6,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="添加" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
